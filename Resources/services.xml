<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- PluginConfig -->
        <service
                id="sd.language_shop_session_sync.services.config"
                class="\Shopware\Components\Plugin\CachedConfigReader"
        >
            <factory service="shopware.plugin.cached_config_reader" method="getByPluginName" />
            <argument type="string">sdLanguageShopSessionSyncShopware</argument>
        </service>
        <!-- Subscriber -->
        <service
                id="sd.language_shop_session_sync.subscriber.shop_change_subscriber"
                class="sdLanguageShopSessionSyncShopware\Subscriber\ShopChangeSubscriber"
        >
            <argument type="service" id="shopware_storefront.context_service"/>
            <argument type="service" id="pluginlogger" />
            <argument type="service" id="router"/>
            <argument type="service" id="sd.language_shop_session_sync.services.config"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
